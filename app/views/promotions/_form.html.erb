<% if promotion.errors.any? %>
<h4> Ocorreu os seguintes erros: </h4>
<ul>
  <% promotion.errors.full_messages.each do |message| %>
    <li>  <%= message %> </li>
  <% end %>
</ul>
<% end %>

<%= form_with model: promotion do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :code %>
    <%= f.text_field :code %>
  </div>

  <div>
    <%= f.label :discount_rate %>
    <%= f.number_field :discount_rate, within: 0..100 %>
  </div>

  <% unless @promotion.coupons? %>
  <div>
    <%= f.label :coupon_quantity %>
    <%= f.number_field :coupon_quantity, min: 1 %>
  </div>
  <% end %>

  <div>
    <%= f.label :expiration_date %>
    <%= f.text_field :expiration_date %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>
