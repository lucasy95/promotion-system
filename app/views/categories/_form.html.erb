<%= form_with model: @category do |form| %>
  <div>

    <%= form.label :name %> <br>
    <%= form.text_field :name %>
    <% @category.errors.full_messages_for(:name).each do |message| %>
     <%= message %>
    <% end %>
  </div>

  <p></p>

  <div>
    <%= form.label :code %> <br>
    <%= form.text_field :code %>
    <% @category.errors.full_messages_for(:code).each do |message| %>
      <div> <%= message %> </div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
