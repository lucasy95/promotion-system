<!DOCTYPE html>
<html>
  <head>
    <title>Promotion System</title>
  <nav>
    <ul>
    <li><%= link_to 'Início', root_path %></li>
    <li><%= link_to 'Categorias', categories_path %>
    <% if user_signed_in? %>
      <li><%= link_to 'Promoções', promotions_path %></li>
      <li><%= link_to 'Sair', destroy_user_session_path, method: :delete %></li>
      <li><%= current_user.email %></li>
    <% else %>
      <li><%= link_to 'Cadastrar', new_user_registration_path %></li>
      <li><%= link_to 'Entrar', new_user_session_path %></li>
    <% end %>
      <li><%= flash[:notice] %></li>
      <li><%= flash[:alert] %></li>
    </ul>
  </nav>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
